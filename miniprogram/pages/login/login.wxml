<!--miniprogram/pages/login/login.wxml-->

<view class='container'>
  <view class='userinfo'>
    <view class='avatar-wrapper'>
      <image class='avatar' src='{{avatarUrl}}'></image>
    </view>
    <view class='username'>{{nickName}}</view>
  </view>
  <view wx:if='{{!authorized}}' class='wx-login'>
    <button open-type='getUserInfo' type='primary' bindgetuserinfo='onGetUserInfo'>微信登录</button>
  </view>
</view>