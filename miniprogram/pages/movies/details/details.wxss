/* pages/movies/details/details.wxss */

.movie-info-card {
  position: relative;
  width: 650rpx;
  height: 1060rpx;
  margin-top: 90rpx;
  border: 1rpx solid #E2E7EE;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-cover {
  position: absolute;
  top: -60rpx;
  left: 175rpx;
  width: 300rpx;
  height: 400rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.06);
}

.movie-title {
  position: absolute;
  top: 360rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  font-weight: bold;
  opacity: 0.8;
}

.movie-description {
  position: absolute;
  top: 420rpx;
  font-size: 28rpx;
  line-height: 56rpx;
  opacity: 0.8;
  width: 480rpx;
  max-height: 400rpx;
}


