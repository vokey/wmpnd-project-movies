.description-text {
  max-height: 448rpx;
  overflow: hidden;
}

.description-more {
  line-height: 40rpx;
}

.btn-group {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  width: 650rpx;
  height: 120rpx;
  justify-content: space-evenly;
}

.btn {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #d4237a;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.65;
  border: 2rpx solid #d4237a;
  border-radius: 10rpx;
  padding: 30rpx;
  height: 80rpx;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}