/* pages/comments/list/list.wxss */

.comments-list {
  margin-top: 30rpx;
}

.no-comments {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  margin-top: 120rpx;
  opacity: 0.5;
}

.no-comments-icon {
  width: 200rpx;
  height: 200rpx;
}

.no-comments-text {
  margin-top: 20rpx;
  font-size: 35rpx;
  line-height: 50rpx;
}

.comments-item {
  width: 750rpx;
  height: 220rpx;
  background-color: #fff;
  border-top: 2rpx solid #f4f4f4;
  padding: 30rpx 50rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}

.userinfo {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid #f4f4f4;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
}

.username {
  margin-left: 20rpx;
  color: #33434e;
  font-size: 35rpx;
  line-height: 50rpx;
}

.comment-wrapper {
  margin-top: 30rpx;
  margin-left: 60rpx;
}

.comment-text {
  white-space: nowrap; 
  overflow: hidden;
  text-overflow: ellipsis;
  width: 600rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
}

.btn-audio {
  width: 320rpx;
  height: 60rpx;
  border: 1rpx solid #c3d0da;
  border-radius: 10rpx;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}

.btn-audio-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.btn-audio-text {
  margin-left: 20rpx;
  color: #ef3d97;
}

.btn-home {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #99acc0;
  background-color: #fff;
  border-top: 1rpx solid #e6ebee;
}