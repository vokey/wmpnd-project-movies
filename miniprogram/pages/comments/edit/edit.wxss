/* pages/comments/edit/edit.wxss */

.movie-comment-card {
  position: relative;
  width: 650rpx;
  height: 960rpx;
  margin-top: 90rpx;
  border: 1rpx solid #E2E7EE;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-cover {
  position: absolute;
  top: -60rpx;
  left: 205rpx;
  width: 240rpx;
  height: 320rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.06);
}

.movie-title {
  position: absolute;
  top: 280rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  font-weight: bold;
  opacity: 0.8;
}

.comment-form {
  position: absolute;
  top: 360rpx;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.8;
  width: 480rpx;
  height: 460rpx;
}

.comment-input {
  width: 480rpx;
  height: 460rpx;
}

.audio-input {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-record {
  width: 320rpx;
  height: 320rpx;
  border-radius: 50%;
  background-color: #00bc00;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-record-hover {
  background-color: #99acc0;
}

.icon-record {
  width: 200rpx;
  height: 200rpx;
  margin-top: 60rpx;
}

.btn-record-tips {
  margin-top: 30rpx;
  opacity: 0.8;
}

.btn-record-again {
  margin-top: 30rpx;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border: 1rpx solid #99acc0;
  border-radius: 10rpx;
}

.btn-group {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  width: 650rpx;
  height: 120rpx;
  justify-content: space-evenly;
}

.btn {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #d4237a;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.45;
  border: 2rpx solid #d4237a;
  border-radius: 10rpx;
  padding: 30rpx;
  height: 80rpx;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.btn-submit {
  width: 750rpx;
  height: 120rpx;
  text-align: center;
  background-color: #00bc00;
  color: #fff;
  line-height: 120rpx;
  position: absolute;
  bottom: 0;
}

.btn-disabled {
  background-color: #ececec;
  color: #c6c7c9;
}