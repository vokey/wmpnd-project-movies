/* pages/comments/details/details.wxss */

.movie-info-card {
  position: relative;
  width: 650rpx;
  height: 1060rpx;
  margin-top: 90rpx;
  border: 1rpx solid #E2E7EE;
  border-radius: 10rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.movie-cover {
  position: absolute;
  top: -60rpx;
  left: 205rpx;
  width: 240rpx;
  height: 320rpx;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.06);
}

.movie-title {
  position: absolute;
  top: 280rpx;
  font-size: 35rpx;
  line-height: 50rpx;
  font-weight: bold;
  opacity: 0.8;
}

.userinfo-wrapper {
  display: flex;
  align-items: center;
  position: absolute;
  top: 340rpx;
  left: 60rpx;
}

.avatar-wrapper {
  margin-right: 20rpx;
}

.comment-title {
  font-size: 30rpx;
  line-height: 42rpx;
  color: #d4237a;
  font-weight: bold;
  opacity: 0.8;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.movie-comment {
  position: absolute;
  top: 440rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  opacity: 0.8;
  width: 520rpx;
  max-height: 440rpx;
  display: flex;
}

.comment-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  opacity: 0.8;
}

.comment-text {
  margin-top: 20rpx;
  width: 440rpx;
  max-height: 440rpx;
  overflow: hidden;
}

.btn-audio {
  width: 320rpx;
  height: 60rpx;
  border: 1rpx solid #c3d0da;
  border-radius: 10rpx;
  background: #f4f4f4;
  display: flex;
  align-items: center;
}

.btn-audio-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.btn-audio-text {
  margin-left: 20rpx;
  color: #ef3d97;
}

.btn-group {
  position: absolute;
  bottom: 0;
  left: 0;
  display: flex;
  width: 650rpx;
  height: 120rpx;
  justify-content: space-evenly;
}

.btn {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #d4237a;
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.65;
  border: 2rpx solid #d4237a;
  border-radius: 10rpx;
  padding: 30rpx;
  width: 240rpx;
  height: 80rpx;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}